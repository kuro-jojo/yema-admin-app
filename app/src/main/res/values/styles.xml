<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="welcome">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#111111</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="enter_your_details_to_log">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#111111</item>
    </style>

    <style name="phone_number">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#111111</item>
    </style>

    <style name="button_log_in">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="by_miaplenou">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="forgot_password">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/blue_link_bold</item>
    </style>

    <style name="ErrorTextAppearance" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/text_red_light</item> <!-- Red color for the outline box -->
    </style>

    <style name="login_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>